<!DOCTYPE html>
<html>
<head>
  <% include ../_header %>
</head>
<body>
<h1><%= title %></h1>

<a href="/movie/new">New</a>

<table border="1">
    <tr>
        <th>id</th>
        <th>title</th>
        <th>description</th>
    </tr>
    <% movies.forEach(function(movie) { %>
    <tr>
        <td><a href="/movie/<%= movie.id %>"><%= movie.id %></a></td>
        <td><%= movie.title %></td>
        <td><%= movie.description %></td>
    </tr>
    <% }) %>
</table>
</body>
</html>
